<%- include('./partials/header') %>

<div class="w-full h-screen flex items-start px-20 py-20 gap-10">
  <!-- Left Section: Product Overview -->
  <div class="w-[30%] rounded-md overflow-hidden">
    <div class="w-full flex flex-col gap-5 items-center">
      <% user.cart.forEach((product) => { %>
        <div class="w-full flex flex-col items-center border rounded-lg overflow-hidden">
          <div class="w-full h-40 flex justify-center items-center bg-[<%= product.bgColor %>]">
            <img class="h-[10rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
          </div>
          <div class="w-full px-5 py-4 bg-[<%= product.panelColor %>]">
            <h3 class="text-xl font-bold text-center"><%= product.name %></h3>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Right Section: Price Breakdown -->
  <div class="w-[70%]">
    <h3 class="text-xl font-semibold">Price Breakdown</h3>
    <div class="px-10 mt-5">
      <% user.cart.forEach((product) => { %>
        <div class="mb-5 border-b pb-3">
          <h4 class="text-lg font-semibold"><%= product.name %></h4>
          <div class="flex mt-2">
            <h4 class="w-1/3">Total MRP</h4>
            <h4>₹ <%= product.price %></h4>
          </div>
          <div class="flex mt-2">
            <h4 class="w-1/3">Discount</h4>
            <h4>₹ <%= product.discount %></h4>
          </div>
          <div class="flex mt-2">
            <h4 class="w-1/3">Platform Fee</h4>
            <h4>₹ 20</h4>
          </div>
        </div>
      <% }) %>
      <div class="flex mt-2">
        <h4 class="w-1/3">Shipping Fee</h4>
        <h4>FREE</h4>
      </div>
    </div>

    <div class="w-full h-[1px] bg-black mt-10"></div>
    <div class="flex mt-5">
      <h3 class="w-1/3 text-xl">Total Amount</h3>
      <h3 class="font-semibold text-xl text-green-600">
        ₹ <%= user.cart.reduce((total, product) => total + (product.price - product.discount + 20), 0) %>
      </h3>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
